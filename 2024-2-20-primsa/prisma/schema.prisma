datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id       String  @id @default(cuid())
    email    String  @unique
    name     String?
    password String?
}

model Accounts {
    id      String  @id @default(cuid())
    title   String?
    balance Int?
    user    User    @relation(fields: [userId], references: [id])
    //Wie funktionieren Beziehungen? Habe nachhgeschaut, aber nicht verstanden.
}

model Transactions {
    id        String    @id @default(cuid())
    amount    Int?
    currency  String?
    date      DateTime?
    account   Accounts  @relation(fields: [accountId], references: [id])
    accountId String
    user      User      @relation(fields: [userId], references: [id])
    userId    String
}

model payees {
    id     String  @id @default(cuid())
    name   String?
    user   User    @relation(fields: [userId], references: [id])
    userId String
}
